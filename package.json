{
  "name": "transparenta-eu-server",
  "version": "0.1.0",
  "description": "Transparenta.eu server used to analyze and visualize public budget data from Romania",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "scripts": {
    "dev": "tsx watch --clear-screen=false --env-file=.env src/api.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/api.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "test": "vitest run --exclude 'tests/e2e/**'",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest --exclude 'tests/e2e/**'",
    "test:coverage": "vitest run --coverage --exclude 'tests/e2e/**'",
    "validate-datasets": "tsx scripts/validate-datasets.ts",
    "ci": "pnpm typecheck && pnpm lint && pnpm test && pnpm build",
    "prepare": "husky",
    "clean": "rm -rf dist coverage"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@graphql-tools/schema": "^10.0.30",
    "@sinclair/typebox": "^0.34.41",
    "bullmq": "^5.65.0",
    "decimal.js": "^10.6.0",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "graphql": "^16.12.0",
    "ioredis": "^5.8.2",
    "kysely": "^0.28.8",
    "mercurius": "^16.6.0",
    "neverthrow": "^8.2.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@testcontainers/postgresql": "^11.9.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "kysely-codegen": "^0.19.0",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.7.1",
    "testcontainers": "^11.9.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
