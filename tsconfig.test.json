{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["vitest/globals", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@/infra/*": ["./src/infra/*"],
      "@/common/*": ["./src/common/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/tests/*": ["./tests/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
