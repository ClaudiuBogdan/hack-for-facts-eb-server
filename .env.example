# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Logging
# Options: fatal, error, warn, info, debug, trace, silent
LOG_LEVEL=info

# Database Configuration
# Required: Budget database connection string
BUDGET_DATABASE_URL=postgresql://user:password@localhost:5432/transparenta_budget

# Optional: Separate user database (falls back to BUDGET_DATABASE_URL if not set)
USER_DATABASE_URL=postgresql://user:password@localhost:5432/transparenta_users

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Cache Configuration
# Backend options: memory, redis, multi, disabled
# - memory: In-memory LRU cache (default, single server)
# - redis: Redis-only cache (multi-server, persistent)
# - multi: L1 memory + L2 Redis (best performance, multi-server)
# - disabled: No caching (for debugging)
# Auto-detection: If REDIS_URL is set and CACHE_BACKEND is not, defaults to 'redis'
CACHE_BACKEND=multi

# Cache TTL in milliseconds (default: 60 days = 5184000000)
# CACHE_DEFAULT_TTL_MS=5184000000

# Memory cache max entries (default: 1000)
# CACHE_MEMORY_MAX_ENTRIES=1000

# L1 cache max entries for multi-level mode (default: 500)
# CACHE_L1_MAX_ENTRIES=500

SHORT_LINK_DAILY_LIMIT=
SHORT_LINK_CACHE_TTL=
